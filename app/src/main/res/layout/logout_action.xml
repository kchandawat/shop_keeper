<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="bottom"

    tools:context=".Business_Category">
    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        style="?attr/bottomSheetStyle"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_sheet"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_baseline_close_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/product_added_thumbs_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to Logout?"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:padding="20dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"

                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Yeslogout_button"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:paddingBottom="10dp"
                    android:shadowColor="#ffffff"
                    android:text="Yes, Logout"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    app:cornerRadius="10dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_editor_absoluteY="143dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Nologout_button"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:paddingBottom="10dp"
                    android:shadowColor="#ffffff"
                    app:backgroundTint="@color/red"
                    android:text="No, Don't"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    app:cornerRadius="10dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_editor_absoluteY="143dp" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>