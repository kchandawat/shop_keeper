<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_sheet"
    style="?attr/bottomSheetStyle"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Product Varient"
                android:textSize="24dp"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_sheet"

                android:layout_marginLeft="80dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_baseline_close_24"
                app:iconTint="@color/black"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:backgroundTint="@color/white"

                />

        </LinearLayout>
        <View
            style="@style/Divider"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <TextView

            android:id="@+id/add_size_variant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expandable_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
             android:text="Add Size Variant"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:drawableRight="@drawable/ic_baseline_arrow_down_24"
            android:textSize="18dp"
            android:padding="16dp"
            />
        <View
            style="@style/Divider"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1000"
            app:el_expanded="true"
            app:el_parallax="0.5">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/expandable_child"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:padding="16dp"
                tools:ignore="UnusedAttribute">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size Name"
                        android:textSize="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/label1"
                        android:id="@+id/edittext1"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:textSize="16dp"


                        android:padding="10dp"
                        android:background="@drawable/edit_text_layout"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5"
                        android:layout_marginRight="5dp"
                        >

                        <TextView
                            android:id="@+id/label5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/edittext5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/label5"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_layout"


                            android:padding="10dp"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        >

                        <TextView
                            android:id="@+id/label6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discounted Price"
                            android:textSize="15dp" />
                        <EditText
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/label6"
                            android:id="@+id/edittext6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"

                            android:padding="10dp"
                            android:background="@drawable/edit_text_layout"/>
                    </RelativeLayout>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Now"
                    android:padding="15dp"
                    app:cornerRadius="12dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    app:strokeColor="@color/red"
                    android:textAllCaps="false"
                    app:strokeWidth="2dp"
                    android:layout_marginTop="15dp"
                    app:cornerRadius="14dp"
                    android:padding="15dp"
                    android:stateListAnimator="@null"
                    app:iconGravity="textStart"
                    android:textAlignment="center"
                    android:backgroundTint="@color/light_grey"
                    android:text="Add Another Size Variant"
                    android:textColor="@color/red"
                    android:textSize="14dp"

                    />
            </LinearLayout>



        </net.cachapa.expandablelayout.ExpandableLayout>

                <TextView

                    android:id="@+id/add_color_variant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/expandable_parent"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Add Size Variant"
                    android:textColor="@color/black"
                    android:drawableTint="@color/black"
                    android:drawableRight="@drawable/ic_baseline_arrow_down_24"
                    android:textSize="18dp"
                    android:padding="16dp"
                    />
                <View
                    style="@style/Divider"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="1000"
                    app:el_expanded="true"
                    app:el_parallax="0.5">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/layout_cover1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/expandable_child"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="16dp"
                        tools:ignore="UnusedAttribute">

                        <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            >

                            <TextView
                                android:id="@+id/label2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size Name"
                                android:textSize="15dp" />
                            <EditText
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/label2"
                                android:id="@+id/edittext2"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:textSize="16dp"


                                android:padding="10dp"
                                android:background="@drawable/edit_text_layout"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            >
                            <RelativeLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_weight="5"
                                android:layout_marginRight="5dp"
                                >

                                <TextView
                                    android:id="@+id/label7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Price"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/edittext7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/label7"

                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/edit_text_layout"


                                    android:padding="10dp"
                                    android:textSize="16dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_weight="5"
                                android:layout_marginLeft="5dp"
                                >

                                <TextView
                                    android:id="@+id/label8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Discounted Price"
                                    android:textSize="15dp" />
                                <EditText
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/label8"
                                    android:id="@+id/edittext8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"

                                    android:padding="10dp"
                                    android:background="@drawable/edit_text_layout"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Now"
                            android:padding="15dp"
                            app:cornerRadius="12dp"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            app:strokeColor="@color/red"
                            android:textAllCaps="false"
                            app:strokeWidth="2dp"
                            android:layout_marginTop="15dp"
                            app:cornerRadius="14dp"
                            android:padding="15dp"
                            android:stateListAnimator="@null"
                            app:iconGravity="textStart"
                            android:textAlignment="center"
                            android:backgroundTint="@color/light_grey"
                            android:text="Add Another Size Variant"
                            android:textColor="@color/red"
                            android:textSize="14dp"

                            />
                    </LinearLayout>



                </net.cachapa.expandablelayout.ExpandableLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>






</LinearLayout>