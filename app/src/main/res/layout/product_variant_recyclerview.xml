<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/expandable_child"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="UnusedAttribute">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size Name"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/size_variant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label1"

                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_layout"


                android:padding="10dp"
                android:textSize="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/label5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/variant_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label5"

                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_layout"


                    android:padding="10dp"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/label6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discounted Price"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/variant_discounted_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label6"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_layout"

                    android:padding="10dp"
                    android:textSize="16dp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView

            android:id="@+id/add_color_variant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard8"
            android:layout_marginTop="@dimen/standard8"
            android:layout_marginRight="@dimen/standard8"
            android:background="@drawable/expandable_parent"
            android:drawableRight="@drawable/ic_baseline_arrow_down_24"
            android:drawableTint="@color/black"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="16dp"
            android:text="Add Colour Variant"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/standard8"
            android:layout_marginRight="@dimen/standard8" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1000"
            app:el_expanded="true"
            app:el_parallax="0.5">

            <LinearLayout
                android:id="@+id/layout_cover1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard8"
                android:layout_marginRight="@dimen/standard8"
                android:layout_marginBottom="@dimen/standard8"
                android:background="@drawable/expandable_child"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="16dp"
                tools:ignore="UnusedAttribute">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/colour_variant_recyclerView"
                        app:layout_constraintTop_toBottomOf="@id/add_product_images"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_new_color_variant_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/light_grey"
                    android:padding="15dp"
                    android:stateListAnimator="@null"
                    android:text="Add Colour"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    app:cornerRadius="14dp"
                    app:iconGravity="textStart"
                    app:strokeColor="@color/red"
                    app:strokeWidth="2dp"

                    />
            </LinearLayout>


        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>