<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="bottom"
    tools:context=".Business_Category">

    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        style="?attr/bottomSheetStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_sheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Business Categories"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_sheet"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_baseline_close_24"
                app:iconGravity="textEnd"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="@color/black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="80dp"
                android:scrollbarStyle="insideInset"
                android:scrollbarTrackVertical="@color/design_default_color_primary"
                android:translationZ="-10dp"
                app:behavior_hideable="true"
                app:behavior_peekHeight="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"


                    >


                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkimageselector"
                        android:drawablePadding="20dp"
                        android:paddingLeft="30dp"
                        android:text="Kirana"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkimageselector"
                        android:drawablePadding="20dp"
                        android:paddingLeft="30dp"
                        android:text="Dairy"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkimageselector"
                        android:drawablePadding="20dp"
                        android:paddingLeft="30dp"
                        android:text="Footwear"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkimageselector"
                        android:drawablePadding="20dp"
                        android:paddingLeft="30dp"
                        android:text="Food"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkimageselector"
                        android:drawablePadding="20dp"
                        android:paddingLeft="30dp"
                        android:text="Cosmetics"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkimageselector"
                        android:drawablePadding="20dp"
                        android:paddingLeft="30dp"
                        android:text="Cake"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkimageselector"
                        android:drawablePadding="20dp"
                        android:paddingLeft="30dp"
                        android:text="Stationary"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkimageselector"
                        android:drawablePadding="20dp"
                        android:paddingLeft="30dp"
                        android:text="Books"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-10dp"
                    android:paddingBottom="10dp"
                    android:shadowColor="#ffffff"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    app:cornerRadius="10dp" />

            </LinearLayout>



            <view
                class="android.widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>