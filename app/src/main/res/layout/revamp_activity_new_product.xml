<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.marquedo.marquedo.new_product">

    <ImageButton
        android:id="@+id/add_new_product_back_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/standard16"
        android:background="@null"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:contentDescription="@string/add_new_product_back_button" />

    <TextView
        android:id="@+id/product_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard16"
        android:padding="10dp"
        android:text="Add New Product"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_new_product_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/product_name_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-28dp"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp"


                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_product_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:stateListAnimator="@null"
                    android:text="@string/upto_6"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    app:cornerRadius="14dp"
                    app:icon="@mipmap/add_product_images_foreground"
                    app:iconGravity="textStart"
                    app:iconTint="#C95400"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="0.5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_images_recyclerView"
                    app:layout_constraintTop_toBottomOf="@id/add_product_images"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/price_til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard16"
                    app:boxCornerRadiusTopStart="@dimen/til_corner_radius"
                    app:boxCornerRadiusTopEnd="@dimen/til_corner_radius"
                    app:boxCornerRadiusBottomStart="@dimen/til_corner_radius"
                    app:boxCornerRadiusBottomEnd="@dimen/til_corner_radius"
                    app:layout_constraintBottom_toTopOf="@id/business_category_til"
                    app:layout_constraintEnd_toStartOf="@id/discounted_price_til"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_images_recyclerView">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price"
                        android:imeOptions="actionNext"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/discounted_price_til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard16"
                    app:boxCornerRadiusTopStart="@dimen/til_corner_radius"
                    app:boxCornerRadiusTopEnd="@dimen/til_corner_radius"
                    app:boxCornerRadiusBottomStart="@dimen/til_corner_radius"
                    app:boxCornerRadiusBottomEnd="@dimen/til_corner_radius"
                    app:layout_constraintBottom_toTopOf="@id/business_category_til"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/price_til"
                    app:layout_constraintTop_toBottomOf="@id/product_images_recyclerView">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/discounted_price"
                        android:imeOptions="actionNext"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nop_til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard16"
                    app:boxCornerRadiusTopStart="@dimen/til_corner_radius"
                    app:boxCornerRadiusTopEnd="@dimen/til_corner_radius"
                    app:boxCornerRadiusBottomStart="@dimen/til_corner_radius"
                    app:boxCornerRadiusBottomEnd="@dimen/til_corner_radius"
                    app:layout_constraintBottom_toTopOf="@id/business_category_til"
                    app:layout_constraintEnd_toStartOf="@id/unit_measure_til"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_images_recyclerView">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price"
                        android:imeOptions="actionNext"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/unit_measure_til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard16"
                    app:boxCornerRadiusTopStart="@dimen/til_corner_radius"
                    app:boxCornerRadiusTopEnd="@dimen/til_corner_radius"
                    app:boxCornerRadiusBottomStart="@dimen/til_corner_radius"
                    app:boxCornerRadiusBottomEnd="@dimen/til_corner_radius"
                    app:layout_constraintBottom_toTopOf="@id/business_category_til"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/nop_til"
                    app:layout_constraintTop_toBottomOf="@id/product_images_recyclerView">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/discounted_price"
                        android:imeOptions="actionNext"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="5">

                        <TextView
                            android:id="@+id/label3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="10dp" />

                        <EditText
                            android:id="@+id/edittext3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/label3"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_layout"


                            android:padding="10dp"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5">

                        <TextView
                            android:id="@+id/label4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discounted Price"
                            android:textSize="10dp" />

                        <EditText
                            android:id="@+id/edittext4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/label4"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_layout"

                            android:padding="10dp"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="5">

                        <TextView
                            android:id="@+id/label5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number of Product"
                            android:textSize="10dp" />

                        <EditText
                            android:id="@+id/edittext5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/label5"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_layout"


                            android:padding="10dp"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5">

                        <TextView
                            android:id="@+id/label6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unit Measure"
                            android:textSize="10dp" />

                        <EditText
                            android:id="@+id/edittext6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/label6"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_layout"

                            android:padding="10dp"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/label7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Details"
                        android:textSize="10dp" />

                    <EditText
                        android:id="@+id/edittext7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label7"

                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_layout"


                        android:padding="10dp"
                        android:textSize="16dp" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_new_product_variant_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:stateListAnimator="@null"
                    android:text="Add Varient of this Product"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#c95400"
                    android:textSize="16dp"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_baseline_add_24"
                    app:iconGravity="textStart"
                    app:iconTint="#C95400"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="0.5dp"

                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_product_button"
                    android:layout_width="338dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="76dp"
                    android:shadowColor="#ffffff"
                    android:text="Add Product"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    app:cornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>