<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/colour_cardview"
        style="@style/CardView.ColourVariant"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_margin="@dimen/standard8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/delete"
        android:text="@string/delete"
        android:textColor="@color/sienna_brown"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/colour_cardview"
        app:layout_constraintStart_toEndOf="@id/colour_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/colour_cardview" />

</androidx.constraintlayout.widget.ConstraintLayout>