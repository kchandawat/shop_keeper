<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="48dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:contentDescription="Return"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:tint="@color/white"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marketing Campaign"
                android:id="@+id/subscriptionHeader"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="40dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-28dp"
                android:layout_weight="2"
                app:cardCornerRadius="28dp"
                android:backgroundTint="@color/design_default_color_background">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@color/design_default_color_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/yellow_background_icon"
                            android:padding="15dp"
                            app:srcCompat="@drawable/coupon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:lineSpacingExtra="8sp"
                            android:text="Launch Marketing Campaign through SMS or WhatsApp"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Campaign Overview"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/outline_card">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:text="Orders from Campaigns"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:id="@+id/ordersfromcampaigns"
                                android:text="0"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/outline_card">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:text="Sales from Campaigns"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="50dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="â‚¹"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:id="@+id/salesfromcampaigns"
                                    android:text="0"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/outline_card">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:text="Marketing Cost"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="45dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="5dp"
                                    android:text="â‚¹"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="5dp"
                                    android:id="@+id/marketingcost"
                                    android:text="1.74"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/outline_card">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:text="SMS Messages Sent"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="45dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="5dp"
                                    android:id="@+id/smssent"
                                    android:text="4"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    />
                            </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:paddingLeft="7dp"
                        android:text="My Campaigns"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/marketingcampaignstatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="260dp"
                                android:layout_gravity="right"
                                android:background="@drawable/round_corner"
                                android:backgroundTint="#ededed"
                                android:hint="Completed"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:textSize="12dp"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:text="Marketing"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingRight="35dp"
                                android:id="@+id/marketingdatetime"
                                android:inputType="datetime"
                                android:text="10/10/2021 02:23pm"
                                android:textColor="@color/black"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp">
                            <TextView
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:text="Store Views"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="Orders"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:id="@+id/storeviewscount"
                                android:text="0"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:id="@+id/orderscount"
                                android:text="0"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp">
                            <TextView
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:text="Sales"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="Cost of Campaign"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:text="â‚¹"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="7dp"
                                android:id="@+id/sales"
                                android:text="0"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="â‚¹"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="7dp"
                                android:id="@+id/costofcampaign"
                                android:text="0.74"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>


                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/createnewcampaign"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_margin="25dp"
                        android:stateListAnimator="@null"
                        android:text="Create New Campaign"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        app:cornerRadius="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>