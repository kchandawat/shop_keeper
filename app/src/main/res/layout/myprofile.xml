<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="20"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="18">
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="31dp"
                android:layout_marginLeft="20dp"
                android:layout_height="41dp"
                android:background="@null"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_gravity="center_vertical"
                app:tint="@color/white"
                app:srcCompat="?attr/actionModeCloseDrawable" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-25dp"
            android:layout_weight="2"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="28dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/shopImage"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/shop" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:stateListAnimator="@null"

                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/grey"
                            android:textSize="12dp"
                            app:cornerRadius="8dp"
                            app:icon="@mipmap/add_product_images_foreground"
                            app:iconGravity="textStart"
                            app:iconTint="#C95400"
                            app:strokeColor="@color/grey"
                            app:strokeWidth="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="55dp"
                        android:orientation="horizontal"
                        tools:ignore="NotSibling">

                        <TextView
                            android:id="@+id/payment_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Logo should be in .png or .jpg format)"
                            android:textColor="#808080"
                            android:textSize="13sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="5dp"
                            android:elevation="0dp"
                            app:cardCornerRadius="10dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/Password"
                                android:layout_width="match_parent"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:backgroundTint="#FFA500"
                                android:layout_height="65dp"
                                android:layout_gravity="center|top"
                                android:paddingBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Change Password"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                app:cornerRadius="8dp"
                                tools:layout_editor_absoluteX="36dp"
                                tools:layout_editor_absoluteY="143dp"
                                android:stateListAnimator="@null"
                                />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@id/Password"
                                android:layout_marginTop="100dp">

                                <TextView
                                    android:id="@+id/label9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="Business Name"
                                    android:textSize="13sp" />

                                <EditText
                                    android:id="@+id/prodName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/label9"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@drawable/edit_text_layout"
                                    android:hint="Super Shopping centre"
                                    android:minHeight="48dp"
                                    android:padding="10dp"
                                    android:textSize="16sp"
                                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="200dp">

                                <TextView
                                    android:id="@+id/label10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="Business Category"
                                    android:textSize="13sp" />


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/product_category_til"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    app:boxCornerRadiusBottomEnd="15dp"
                                    app:boxCornerRadiusBottomStart="15dp"
                                    app:boxCornerRadiusTopEnd="15dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    app:boxCornerRadiusTopStart="15dp"
                                    android:layout_height="54dp"
                                    android:layout_marginTop="15dp"
                                    android:paddingTop="-3dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/label10">


                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/prod_category"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:drawableEnd="@drawable/ic_baseline_arrow_down_24"
                                        android:focusableInTouchMode="false"
                                        android:hint="Diary, Hardware"
                                        android:inputType="none" />


                                    <!--  <com.google.android.material.textfield.TextInputEditText
                                          android:id="@+id/prod_category_up"
                                          android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:background="@drawable/edit_text_layout"
                                          android:drawableEnd="@drawable/ic_baseline_arrow_down_24"
                                          android:inputType="textAutoComplete"
                                          tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" /> -->


                                </com.google.android.material.textfield.TextInputLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@id/Password"
                                android:layout_marginTop="300dp">

                                <TextView
                                    android:id="@+id/label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="Business Name"
                                    android:textSize="13sp" />

                                <EditText
                                    android:id="@+id/shop"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_below="@+id/label"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@drawable/edit_text_layout"
                                    android:minHeight="48dp"
                                    android:padding="10dp"
                                    android:textSize="16sp"
                                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                            </RelativeLayout>



                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnYesRejectOrderButton"
                                android:layout_width="match_parent"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="15dp"
                                android:backgroundTint="@color/light_grey"
                                android:layout_height="65dp"
                                android:layout_gravity="center|bottom"
                                android:paddingBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Save Changes"
                                android:textAllCaps="false"
                                android:textColor="#808080"
                                android:textSize="20dp"
                                app:cornerRadius="10dp"
                                tools:layout_editor_absoluteX="36dp"
                                tools:layout_editor_absoluteY="143dp"
                                android:stateListAnimator="@null"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
