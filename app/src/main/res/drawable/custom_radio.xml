<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/transparent" />
            <size android:width="16dp" android:height="16dp" />
            <stroke android:width="@dimen/dp1" android:color="@color/black" />
        </shape>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <padding android:bottom="4dp" android:left="4dp"
                        android:right="4dp" android:top="4dp" />
                    <stroke android:width="@dimen/dp1" android:color="@color/black"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/yellow" />
                    <size android:width="10dp" android:height="10dp" />
                    <padding android:bottom="2dp" android:left="2dp"
                        android:right="2dp" android:top="2dp" />
                    <corners android:radius="6dp"/>
                </shape>
            </item>
        </layer-list>

    </item>


</selector>